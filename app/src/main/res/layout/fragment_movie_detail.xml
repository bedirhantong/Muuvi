<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".feature.movie_detail_screen.presentation.MovieDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivBackdropDetails"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:contentDescription="Backdrop"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/ivPoster"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginTop="-75dp"
            android:layout_marginStart="16dp"
            android:contentDescription="Poster"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/ivBackdropDetails"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tvMovieTitle"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvMovieTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@android:color/black"
            android:paddingTop="8dp"
            android:maxLines="2"
            android:paddingStart="14dp"
            app:layout_constraintTop_toBottomOf="@id/ivBackdropDetails"
            app:layout_constraintStart_toEndOf="@id/ivPoster"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Movie Title" />

        <TextView
            android:id="@+id/tvReleaseDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@android:color/darker_gray"
            android:paddingBottom="8dp"
            android:paddingStart="14dp"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/tvMovieTitle"
            app:layout_constraintStart_toEndOf="@id/ivPoster"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Release Date: 2024-01-01" />

        <TextView
            android:id="@+id/tvOverview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/tvReleaseDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Movie overview goes here. This is a brief description of the movie plot and main points." />

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@android:color/black"
            android:paddingTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvOverview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Rating: 8.5/10" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
