<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authScreen">

    <fragment
        android:id="@+id/homeFeed"
        android:name="com.bedirhan.muuvi.feature.list_movies.presentation.HomeFeedFragment"
        android:label="fragment_home_feed"
        tools:layout="@layout/fragment_home_feed">
        <argument
            android:name="userEmail"
            app:argType="string"
            android:defaultValue=""/>
    </fragment>

    <fragment
        android:id="@+id/authScreen"
        android:name="com.bedirhan.muuvi.feature.authentication.presentation.AuthScreen"
        android:label="fragment_auth_screen"
        tools:layout="@layout/fragment_auth_screen">
        <action
            android:id="@+id/action_authScreen_to_homeFeed"
            app:destination="@id/homeFeed"
            app:popUpTo="@id/authScreen"
            app:popUpToInclusive="true">
            <argument
                android:name="userEmail"
                app:argType="string"/>
        </action>
    </fragment>
</navigation>
